{{#extend "layout"}}

    {{!-- Note the append mode: can be handy to add stuff at the END of the layout-head block --}}
    {{#content "head" mode="append"}}

    {{/content}}

    {{#content "content"}}
        <!-- BEGIN A4 -->
        <page class="A4">
            {{> components/header }}
            {{!-- {{> components/timeline }} --}}
            {{> components/career }}
            {{> components/coding_languages }}
        </page>
        <!-- END A4 -->
    {{/content}}

    {{!-- Note the prepend mode: can be handy to add stuff at the BEGINNING of the layout-foot block --}}
    {{#content "foot" mode="prepend"}}
        {{> components/footer }}
    {{/content}}

{{/extend}}
